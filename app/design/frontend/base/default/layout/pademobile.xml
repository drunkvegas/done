<layout version="0.1.0">
    <pademobile_standard_redirect>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="head">
            <action method="addJs"><script>pademobile/pademobile.js</script></action>
        </reference>
        <reference name="content">
            <block type="pademobile/redirect" name="pademobile_redirect" template="pademobile/redirect.phtml"/>
        </reference>
    </pademobile_standard_redirect>

    <pademobile_standard_result>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="pademobile/result" name="pademobile_result" template="pademobile/result.phtml"/>
        </reference>
    </pademobile_standard_result>
</layout>