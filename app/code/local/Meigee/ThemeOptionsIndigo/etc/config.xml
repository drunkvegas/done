<?xml version="1.0"?>
<config>
	<modules>
		<Meigee_ThemeOptionsIndigo>
			<version>0.1.0</version>
			<depends>
			<!-- no dependencies -->
			</depends>
		</Meigee_ThemeOptionsIndigo>
	</modules> 
	<admin>
		<routers>
			<adminhtml2>
				<use>admin</use>
				<args>
					<module>Meigee_ThemeOptionsIndigo</module>
					<frontName>themeoptionsindigo</frontName>
				</args>
			</adminhtml2>
		</routers>
	</admin>
	<frontend>
		<routers>
		   <meigeefrontend>
			  <use>standard</use>
			  <args>
				 <module>Meigee_ThemeOptionsIndigo</module>
				 <frontName>meigeeactions</frontName>
			  </args>
		   </meigeefrontend>
		</routers>
	</frontend>
	<adminhtml>
		<layout>
			<updates>
				<meigeesettings>
					<file>meigeesettings.xml</file>
				</meigeesettings>
			</updates>
		</layout>
		<menu>
			<meigee translate="title" module="ThemeOptionsIndigo">
				<title>Meigee</title>
				<sort_order>9999</sort_order>
				<children>
					<theme_options translate="title" module="ThemeOptionsIndigo">
						<title>Theme Options v1.0</title>
						<sort_order>1</sort_order>
						<children>
							<general_options translate="title" module="ThemeOptionsIndigo">
								<title>General Options</title>
								<sort_order>1</sort_order>
								<action>adminhtml/system_config/edit/section/meigee_indigo_general</action>
							</general_options>
							<design_options translate="title" module="ThemeOptionsIndigo">
								<title>Design Options</title>
								<sort_order>2</sort_order>
								<action>adminhtml/system_config/edit/section/meigee_indigo_design</action>
							</design_options>
							<productpage_options translate="title" module="ThemeOptionsIndigo">
								<title>Product Page Options</title>
								<sort_order>3</sort_order>
								<action>adminhtml/system_config/edit/section/meigee_indigo_productpage</action>
							</productpage_options>
							<sidebar_options translate="title" module="ThemeOptionsIndigo">
								<title>Sidebar Options</title>
								<sort_order>4</sort_order>
								<action>adminhtml/system_config/edit/section/meigee_indigo_sidebar</action>
							</sidebar_options>
							<headerslider_options translate="title" module="ThemeOptionsIndigo">
								<title>Header Slider</title>
								<sort_order>5</sort_order>
								<action>adminhtml/system_config/edit/section/meigee_indigo_headerslider</action>
							</headerslider_options>
							<bgslider_options translate="title" module="ThemeOptionsIndigo">
								<title>Background Slider</title>
								<sort_order>6</sort_order>
								<action>adminhtml/system_config/edit/section/meigee_indigo_bgslider</action>
							</bgslider_options>
						</children>
					</theme_options>
					<restore_theme translate="title" module="ThemeOptionsIndigo">
						<title>Restore Defaults</title>
						<sort_order>1</sort_order>
						<action>themeoptionsindigo/restore/index</action>
					</restore_theme>
					<activate_theme translate="title" module="ThemeOptionsIndigo">
						<title>Activate Theme</title>
						<sort_order>1</sort_order>
						<action>themeoptionsindigo/activation/index</action>
					</activate_theme>
				</children>
			</meigee>
		</menu>
		<events>
		    <controller_action_predispatch>
                <observers>
                    <themeoptionsindigo_notification>
                        <type>singleton</type>
                        <class>Meigee_ThemeOptionsIndigo_Model_Feed</class>
                        <method>observe</method>
                    </themeoptionsindigo_notification>
                </observers>
            </controller_action_predispatch>
		</events>
	</adminhtml>
	<global>
		<models>
			<ThemeOptionsIndigo><class>Meigee_ThemeOptionsIndigo_Model</class></ThemeOptionsIndigo>
		</models>
		<resources>
		    <themeoptionsindigo_setup>
		      <setup>
		        <module>Meigee_ThemeOptionsIndigo</module>
		        <class>Meigee_ThemeOptionsIndigo_Model_Resource_Eav_Mysql4_Setup</class>
		      </setup>
		      <connection>
		        <use>core_setup</use>
		      </connection>
		    </themeoptionsindigo_setup>
		    <themeoptionsindigo_write>
		      <connection>
		        <use>core_write</use>
		      </connection>
		    </themeoptionsindigo_write>
		    <themeoptionsindigo_read>
		      <connection>
		        <use>core_read</use>
		      </connection>
		    </themeoptionsindigo_read>
		</resources>
		<events>
			<adminhtml_controller_action_predispatch_start>
				<observers>
					<Meigee_ThemeOptionsIndigo_observer>
						<type>singleton</type>
						<class>Meigee_ThemeOptionsIndigo_Controller_Observer</class>
						<method>overrideTheme</method>
					</Meigee_ThemeOptionsIndigo_observer>
				</observers>
			</adminhtml_controller_action_predispatch_start>  	
			<controller_action_postdispatch_adminhtml_system_config_save>
				<observers>
					<themeoptionsindigo_awesome>
						<type>singleton</type>
						<class>Meigee_ThemeOptionsIndigo_Model_Observer</class>
						<method>cssgenerate</method>
					</themeoptionsindigo_awesome>
				</observers>
			</controller_action_postdispatch_adminhtml_system_config_save>
		</events>
		<helpers>
			<ThemeOptionsIndigo><class>Meigee_ThemeOptionsIndigo_Helper</class></ThemeOptionsIndigo>
		</helpers>
		<extraconfig />
		<blocks>
			<meigee_themeoptionsindigo><class>Meigee_ThemeOptionsIndigo_Block</class></meigee_themeoptionsindigo>
			<themeoptionsindigo><class>Meigee_ThemeOptionsIndigo_Block</class></themeoptionsindigo>
			<meigee_indigo_general><class>Meigee_ThemeOptionsIndigo_Block</class></meigee_indigo_general>
			<meigee_indigo_productpage><class>Meigee_ThemeOptionsIndigo_Block</class></meigee_indigo_productpage>
			<meigee_indigo_sidebar><class>Meigee_ThemeOptionsIndigo_Block</class></meigee_indigo_sidebar>
			<meigee_indigo_headerslider><class>Meigee_ThemeOptionsIndigo_Block</class></meigee_indigo_headerslider>
			<meigee_indigo_bgslider><class>Meigee_ThemeOptionsIndigo_Block</class></meigee_indigo_bgslider>
			<customcolorsblock>
				<class>Meigee_ThemeOptionsIndigo_Block_EditCustomColors</class>
			</customcolorsblock>
		</blocks>
	</global>
	<!---->
	<default>
		<price_slider>
		<price_slider_conf>
			<timeout>100</timeout>
		</price_slider_conf>
		<price_slider_settings>
			<slider_loader_active>1</slider_loader_active>
			<include_jquery_ui>1</include_jquery_ui>
		</price_slider_settings>
		<ajax_conf>
			<layered>1</layered>
			<overlay_color>#000000</overlay_color>
			<overlay_opacity>0.3</overlay_opacity>
			<loading_text_color>#000000</loading_text_color>
		</ajax_conf>
		</price_slider>
		<design>
			<header translate="welcome" module="page">
				<welcome>Default welcome msg!</welcome>
			</header>
			<footer translate="copyright" module="page">
				<copyright>&amp;copy; 2012 Magento Demo Store. All Rights Reserved.</copyright>
			</footer>
		 </design>
		 <meigee_indigo_general>
			<retina>
				<status>1</status>
			</retina>
			<header>
				<floatingheader>1</floatingheader>
			</header>
			<layout>
				<sitelayout>0</sitelayout>
				<responsiveness>1</responsiveness>
				<sidebar>sidebar_right</sidebar>
				<grid>grid_standard</grid>
				<cartpage>cart_standard</cartpage>
			</layout>
			<customlogo>
				<logo_status>0</logo_status>
				<small_logo_status>0</small_logo_status>
			</customlogo>
			<footer>
				<footer_status>1</footer_status>
				<footer_static>indigo_footer</footer_static>
			</footer>
			<productimages>
				<keepAspectRatio>1</keepAspectRatio>
				<customAspectRatio>1.11</customAspectRatio>
			</productimages>
			<productlabels>
				<labelnew>1</labelnew>
				<labelonsale>1</labelonsale>
			</productlabels>
			<otheroptions>
				<totop>1</totop>
				<notices>1</notices>
			</otheroptions>
			<loginajax>
				<status>1</status>
			</loginajax>
			<lang_switcher>
				<status>language_flags</status>
				<label>0</label>
			</lang_switcher>
			<curr_switcher>
				<status>currency_images</status>
				<label>0</label>
			</curr_switcher>
			<fancybox>
				<fancybox_status>0</fancybox_status>
				<fancybox_home>0</fancybox_home>
				<fancybox_listing>0</fancybox_listing>
			</fancybox>
			<rollover>
				<rollover_status>1</rollover_status>
				<!-- <rollover_type>1</rollover_type> -->
			</rollover>
		</meigee_indigo_general>
		<meigee_indigo_design>
			<appearance>
				<font>1</font>
				<default_sizes>1</default_sizes>
				<fontsize>14</fontsize>
				<gfont>Montserrat</gfont>
				<lineheight>20</lineheight>
				<fontweight>100</fontweight>
				<patern>none</patern>
			</appearance>
			<base>
				<sitebg>ffffff</sitebg>
				<maincolor>cf3341</maincolor>
				<secondcolor>3b4348</secondcolor>
			</base>
			<header>
				<header--slider_background-color>ffffff</header--slider_background-color>
			</header>
		</meigee_indigo_design>
		<meigee_indigo_productpage>
			<productpage>
				<product_sku>1</product_sku>
				<pagelayout>productpage_medium</pagelayout>
				<prevnext>prevnext</prevnext>
				<moreviews>moreviews_slider</moreviews>
				<collateral>collateral_tabs</collateral>
				<collateral_related>related_slider</collateral_related>
				<relatedposition>right</relatedposition>
			</productpage>
			<productpage_additional>
				<product_custom>indigo_product_custom</product_custom>
			</productpage_additional>
		</meigee_indigo_productpage>
		<meigee_indigo_sidebar>
			<block_categories>
				<status>1</status>
				<option>1</option>
				<option_2>1</option_2>
			</block_categories>
			<block_shop_by>
				<status>1</status>
				<option>1</option>
				<option_2>1</option_2>
			</block_shop_by>
			<block_compare>
				<status>1</status>
			</block_compare>
			<block_compared>
				<status>1</status>
			</block_compared>
			<block_viewed>
				<status>1</status>
			</block_viewed>
			<block_wishlist>
				<status>1</status>
				<option>1</option>
			</block_wishlist>
			<block_tags>
				<status>1</status>
			</block_tags>
			<block_orders>
				<status>1</status>
			</block_orders>
		</meigee_indigo_sidebar>
		<meigee_indigo_headerslider>
			<coin>
				<enabled>1</enabled>
				<onlyhome>1</onlyhome>
				<autoSlide>1</autoSlide>
				<slidertype>0</slidertype>
				<slides>indigo_slide_1, indigo_slide_2, indigo_slide_3</slides>
				<slides2>indigo_boxed_slide_1, indigo_boxed_slide_2, indigo_boxed_slide_3</slides2>
				<autoSlideTimer>5000</autoSlideTimer>
				<autoSlideTransTimer>750</autoSlideTransTimer>
				<desktopClickDrag>1</desktopClickDrag>
				<infiniteSlider>0</infiniteSlider>
			</coin>
		</meigee_indigo_headerslider>
		<meigee_indigo_bgslider>
			<slideroptions>
				<enabled>0</enabled>
				<fade>750</fade>
				<duration>4000</duration>
			</slideroptions>
		</meigee_indigo_bgslider>
		<ajax>
			<wishlistcompare>
				<enabled>1</enabled>
				<enabledpro>1</enabledpro>
			</wishlistcompare>
			<general>
				<enabled>1</enabled>
				<enabledpro>1</enabledpro>
			</general>
			<ajaxtoolbar>
				<enabled>1</enabled>
			</ajaxtoolbar>
		</ajax>
	</default>
</config>